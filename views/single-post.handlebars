<article class="post">
  <div class="title">
    {{post.title}}
   
  </div>
  <div class="meta">
   by {{post.user.username}} {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<!--only if logged in display the comment form -->
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<!--only if logged in load the comment.js file -->
{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}